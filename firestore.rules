rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own vocab sets
    match /sets/{setId} {
      // Allow create, update, delete if the user is the owner
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.ownerId;

      // Allow read if the user is the owner OR the set is public
      allow read: if (request.auth != null && request.auth.uid == resource.data.ownerId) || 
                   (resource.data.visibility == 1 || resource.data.visibility == 2);
    }

    // Allow users to manage cards within their own sets
    match /sets/{setId}/cards/{cardId} {
      // Allow read, write if the user owns the parent set
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/sets/$(setId)).data.ownerId == request.auth.uid;
    }
  }
}
